<%= simple_form_for @friend do |form| %>
  <%= form.input :first_name, label: false,
      placeholder: "First name", error: @friend.errors[:first_name].join(", ")
  %>
  <%= form.input :last_name, label: false,
      placeholder: "Last name", error: @friend.errors[:last_name].join(", ")
  %>
  <%= form.input :email, label: false,
      placeholder: "Email", error: @friend.errors[:email].join(", ")
  %>
  <%= form.input :address, label: false,
      placeholder: "Address", error: @friend.errors[:address].join(", ")
  %>
  <%= form.button :submit, class: "btn btn-primary bt-sm" %>
<% end %>
